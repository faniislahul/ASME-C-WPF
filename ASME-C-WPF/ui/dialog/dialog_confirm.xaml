<Window x:Class="ASME_C_WPF.ui.dialog.dialog_confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASME_C_WPF.ui.dialog"
        mc:Ignorable="d"
        Title="Konfirmasi" MinHeight="170" MinWidth="220" Background="#FF232323" Width="220" Height="170" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="ok" Content="OK" Margin="0,0,18,16" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsDefault="True" Click="ok_Click" />
        <Button x:Name="Batal" Content="Batal" HorizontalAlignment="Left" Margin="18,0,0,16" Width="75" Height="32" VerticalAlignment="Bottom" Click="Batal_Click" Background="{DynamicResource warningbuttonred}" BorderBrush="{DynamicResource warningbuttonred}" IsCancel="True"/>
        <TextBlock x:Name="textBlock" Margin="15,32,15,0" TextWrapping="Wrap" Text="Pilih Lanjut untuk menyelesaikan operasi." Height="34" Foreground="White" TextAlignment="Center" VerticalAlignment="Top"/>


    </Grid>
</Window>
