<Window x:Class="ASME_C_WPF.ui.dialog.dialog_setting_system"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASME_C_WPF.ui.dialog"
        mc:Ignorable="d"
        Title="Setting System" Height="170" Width="220" MinWidth="220" MinHeight="170" Background="#FF232323" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="CLIENT NAME" Margin="10,10,0,0" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" HorizontalAlignment="Left" Width="109" Height="26" VerticalAlignment="Top"></Label>
        <TextBox x:Name="client_name" Margin="20,36,0,0" HorizontalAlignment="Left" Width="185" Height="32" VerticalAlignment="Top"></TextBox>
        <Button x:Name="ok" Content="OK" Margin="0,0,19,21" Click="ok_Click" IsDefault="True" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="72"></Button>
    </Grid>
</Window>
