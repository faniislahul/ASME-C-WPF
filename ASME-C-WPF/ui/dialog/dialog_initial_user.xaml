<Window x:Class="ASME_C_WPF.ui.dialog.dialog_initial_user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASME_C_WPF.ui.dialog"
        mc:Ignorable="d"
        Title="User Baru" Height="200" Width="300" Background="#FF232323">
    <Grid>
        <Label x:Name="cat_Copy" Content="USERNAME" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Width="115" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <TextBox x:Name="uname" Height="28" TextWrapping="Wrap"  VerticalAlignment="Top" Margin="29,34,29,0" Foreground="White"/>
        <Label x:Name="cat_Copy1" Content="PASSWORD" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="115" Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
        <PasswordBox x:Name="pass" Height="28" VerticalAlignment="Top" Margin="29,91,29,0" Foreground="White"/>
        <Button x:Name="OK" Content="OK" IsDefault="True" Click="OK_Click" Margin="188,0,29,12" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
