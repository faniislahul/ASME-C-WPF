<Window x:Class="ASME_C_WPF.ui.dialog.dialog_penggunaan_bb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASME_C_WPF.ui"
        mc:Ignorable="d"
        Title="Penggunaan Bahan Baku" Height="200" Width="300" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF232323">
    <Grid>
        <Label x:Name="label" Content="Kuantitas" HorizontalAlignment="Left" Margin="17,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox"  HorizontalAlignment="Left" Height="23" Margin="28,67,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="90">
            <InputMethod.InputScope>
                <InputScope RegularExpression="^[0-9.\-]+$"></InputScope>
            </InputMethod.InputScope>
        </TextBox>
        <Button x:Name="button" Content="Kirim" HorizontalAlignment="Left" Margin="195,121,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button_Copy" Content="Batal" HorizontalAlignment="Left" Margin="108,121,0,0" VerticalAlignment="Top" Width="75" Background="#FFF32121"/>

    </Grid>
</Window>
